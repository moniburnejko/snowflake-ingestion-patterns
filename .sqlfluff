[sqlfluff]
dialect = snowflake
templater = dbt
exclude_rules = L034, L036
max_line_length = 120

[sqlfluff:rules]
tab_space_size = 4
indent_unit = space

[sqlfluff:rules:L010]
capitalisation_policy = upper

[sqlfluff:rules:L030]
capitalisation_policy = upper

[sqlfluff:templater:dbt]
project_dir = ./
profiles_dir = ./
profile = snowflake_patterns
target = dev
